{
  "name": "zorva",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo run  build --filter=web",
    "test:web": "turbo run  test --filter=web",
    "lint:web": "turbo run lint   --filter=web",



    "build:ui": "turbo run  build --filter=@repo/ui",
    "test:ui": "turbo run  test --filter=@repo/ui",
    "lint:ui": "turbo run lint   --filter=@repo/ui",


    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
